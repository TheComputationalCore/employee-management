name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read
  checks: read
  actions: read

concurrency:
  group: ci-${{ github.ref }}
  cancel-in-progress: true

jobs:
  build-and-test:
    name: Build & Test (Java ${{ matrix.java }})
    runs-on: ubuntu-latest

    strategy:
      fail-fast: false
      matrix:
        java: [ '17', '21' ]

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        # fetch-depth: 0   # uncomment if your build needs full git history

      - name: Set up JDK ${{ matrix.java }}
        uses: actions/setup-java@v4
        with:
          java-version: ${{ matrix.java }}
          distribution: 'temurin'
          cache: maven

      - name: Build and run tests
        run: mvn -B test package --file ./pom.xml
        env:
          MAVEN_OPTS: -Xmx1024m

      - name: Upload build artifacts (success)
        if: ${{ success() }}
        uses: actions/upload-artifact@v4
        with:
          name: build-artifacts
          path: |
            **/target/*.jar
            target/*.jar

      - name: Upload test logs (failure)
        if: ${{ failure() }}
        uses: actions/upload-artifact@v4
        with:
          name: test-fail-logs
          path: target/surefire-reports/**

      - name: Upload test reports (JUnit annotation)
        if: always()
        uses: dorny/test-reporter@v1
        with:
          name: JUnit Reports
          path: target/surefire-reports/*.xml
          # if you have surefire in module directories:
          # path: '**/target/surefire-reports/*.xml'
