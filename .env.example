# ================================
# Application
# ================================
SPRING_PROFILES_ACTIVE=prod

# Render injects PORT automatically
PORT=8080


# ================================
# Database (Neon PostgreSQL)
# ================================
SPRING_DATASOURCE_URL=jdbc:postgresql://ep-xxxxxxxx-pooler.us-east-1.aws.neon.tech/employee_management?sslmode=require
SPRING_DATASOURCE_USERNAME=neondb_owner
SPRING_DATASOURCE_PASSWORD=change-me


# ================================
# JVM (Render free tier SAFE)
# ================================
JAVA_TOOL_OPTIONS=-Xms128m -Xmx384m -XX:+UseG1GC -XX:MaxMetaspaceSize=128m


# ================================
# File Uploads (Ephemeral storage)
# ================================
APP_UPLOAD_DIR=/data/uploads
