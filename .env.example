# Production / Host environment variables (do NOT commit real secrets)
SPRING_PROFILES_ACTIVE=prod
PORT=8080

# MySQL
MYSQLHOST=your-db-host.example.com
MYSQLPORT=3306
MYSQLDATABASE=employee_management
MYSQLUSER=empmgmt_user
MYSQLPASSWORD=change-me

# Hikari tuning
HIKARI_MAX_POOL_SIZE=10

# JVM
JAVA_TOOL_OPTIONS=-Xms256m -Xmx512m -XX:+UseG1GC

# Optional (object storage)
# S3_BUCKET=...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# S3_REGION=...
