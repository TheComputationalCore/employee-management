# ================================
# Application
# ================================
SPRING_PROFILES_ACTIVE=prod

# Render automatically provides PORT
# Do NOT override unless running locally
PORT=8080


# ================================
# Database (Neon PostgreSQL)
# ================================
# Full JDBC URL (without credentials)
SPRING_DATASOURCE_URL=jdbc:postgresql://ep-xxxxxxxx-pooler.us-east-1.aws.neon.tech/neondb?sslmode=require

# Database credentials
SPRING_DATASOURCE_USERNAME=neondb_owner
SPRING_DATASOURCE_PASSWORD=change-me


# ================================
# HikariCP (Connection Pool)
# ================================
HIKARI_MAX_POOL_SIZE=10
HIKARI_MIN_IDLE=2
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1800000


# ================================
# JVM (Required for Render free tier)
# ================================
JAVA_TOOL_OPTIONS=-Xms128m -Xmx512m -XX:+UseG1GC


# ================================
# File Uploads (Ephemeral storage)
# ================================
APP_UPLOAD_DIR=/data/uploads


# ================================
# Optional: Email (if enabled)
# ================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=app-password


# ================================
# Optional: Object Storage (Future)
# ================================
# S3_BUCKET=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_REGION=
